# Server Configuration
NODE_ENV=development
PORT=3000

# PostgreSQL Database (Docker)
# Use this for local Docker setup:
DATABASE_URL="postgresql://mpikarakara:mpikarakara_secret_2024@localhost:5432/mpikarakara?schema=public"

# For production, use your cloud database URL:
# DATABASE_URL="postgresql://user:password@your-cloud-host:5432/mpikarakara?schema=public"

# Redis Cache (Docker)
# Use this for local Docker setup:
REDIS_URL="redis://:mpikarakara_redis_2024@localhost:6379"

# For production:
# REDIS_URL="redis://:password@your-cloud-redis:6379"

# JWT Authentication
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# AI Service
AI_SERVICE_URL=http://localhost:8000

# CORS (comma-separated origins for production)
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Firebase (optional - for push notifications)
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_PRIVATE_KEY=your-firebase-private-key
# FIREBASE_CLIENT_EMAIL=your-firebase-client-email
